/dts-v1/;

#include "imx6q.dtsi"
#include "icorem6qdl-rqs.dtsi"

/ {
	model = "Engicam i.CoreM6 Quad/Dual RQS";
	compatible = "fsl,imx6-icore-rqs", "fsl,imx6q";
	
	aliases {
		mmc1 = &usdhc4;
		mmc0 = &usdhc3;
		mmc2 = &usdhc1;
	};

	sound {
		compatible = "fsl,imx6-icore-sgtl5000",
			     "fsl,imx-audio-sgtl5000";
		model = "imx6q-icore-sgtl5000";
		cpu-dai = <&ssi1>;
		audio-codec = <&codec>;
		audio-routing =
			"MIC_IN", "Mic Jack",
			"Mic Jack", "Mic Bias",
			"Headphone Jack", "HP_OUT";
		mux-int-port = <1>;
		mux-ext-port = <4>;
	};

	gpio_export {
		compatible = "gpio-export";
		#size-cells = <0>;
		GPIO_DL4 {
		        gpio-export,name = "GPIO_DL4";
			gpio-export,output = <1>;
                        gpio-export,direction_may_change;
		        gpios = <&gpio2 25 0>;
		};
		GPIO_EIM_DA7 {
			gpio-export,name = "GPIO_EIM_DA7";
			gpio-export,input = <1>;
			gpios = <&gpio3 7 0>;
		};		
	};

};

&ldb {
	ipu_id = <0>;
	sec_ipu_id = <0>;
};

&mxcfb1 {
	status = "okay";
};

&mxcfb2 {
	status = "okay";
};

&sata {
	status = "okay";
};

/* To be enabled for PCI peripheral.
   Please enable also the PCI support kernel options:
   CONFIG_PCI and PCI_IMX6

   i.Core RQS rev. B needed for PCIe

&pcie {
	power-on-gpio = <&gpio3 19 0>;
	reset-gpio = <&gpio3 29 0>;
	status = "okay";
};
*/

&i2c1 {

	lm75a@4F {
		compatible = "lm75a";
		reg = <0x4F>;
	};

};

&i2c2 {

	hdmi: edid@50 {
		compatible = "fsl,imx6-hdmi-i2c";
		reg = <0x50>;
	};

};


&i2c3 {

	codec: sgtl5000@0a {
		compatible = "fsl,sgtl5000";
		reg = <0x0a>;
		clocks = <&clks 201>;
		VDDA-supply = <&reg_2p5v>;
		VDDIO-supply = <&reg_3p3v>;
		VDDD-supply = <&reg_1p8v>;
	};

};

&iomuxc {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_hog>;	
	hog {
		pinctrl_hog: hoggrp {
			fsl,pins = <
				MX6QDL_PAD_EIM_D19__GPIO3_IO19 0x1f059 /* not used pin for ADV7180 driver compatibility */
				MX6QDL_PAD_EIM_OE__GPIO2_IO25 0x1f059 /* LED DL4*/
				MX6QDL_PAD_EIM_DA7__GPIO3_IO07 0x1f059 /* EIM_DA07 forced to GPIO in */
			>;
		};
	};
};
